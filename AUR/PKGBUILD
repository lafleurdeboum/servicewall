_pkgname=servicewall
pkgname=servicewall
pkgver=0.3.2
pkgrel=1
pkgdesc="the desktop firewall that adapts to different network connections"
arch=("any")
#url="https://pypi.python.org/pypi/servicewall"
url="https://flip.local/~lafleur/"
license=("GPL3")
depends=("python" "networkmanager" "python-iptables" "python-argparse" "python-netifaces" "python-systemd")
optdepends=("python-argcomplete" "systemd-dispatcher")
makedepends=("python-distribute" "python-setuptools")
#options=(!emptydirs)
#source=("https://pypi.python.org/packages/source/p/${_pkgname}/${_pkgname}-${pkgver}.tar.bz2")
source=("http://flip.local/~lafleur/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
md5sums=("c2d34af54be89c5d231ea935596a3a0a")

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}/" --optimize=1 --skip-build
}
